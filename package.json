{
  "name": "hadar-icons",
  "displayName": "Hadar Icons",
  "description": "Icon theme for VS Code",
  "version": "1.0.0",
  "publisher": "cristianvasquez",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Icon Themes"
  ],
  "contributes": {
    "iconThemes": [
      {
        "id": "hadar-icons",
        "label": "Hadar Icons",
        "path": "./themes/hadar-icons.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run compile && node out/extension.js",
    "package": "vsce package",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.105.0",
    "ts-node": "^10.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^4.0.0"
  }
}
