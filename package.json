{
  "name": "hadar-icons",
  "displayName": "Hadar Icons",
  "description": "The ultimate icon theme for modern development. Features vibrant visual hierarchy, customizable folder colors, and specialized icon packs for Angular, NestJS, React, Vue, NgRx, Redux, and Vuex.",
  "version": "1.0.0",
  "publisher": "cristianvasquez",
  "icon": "images/logo.png",
  "author": {
    "name": "Cristian VÃ¡squez",
    "email": "cristianvasquez.info@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cristianvasquezc/hadar-icons-vscode"
  },
  "homepage": "https://hadartheme.netlify.app/",
  "galleryBanner": {
    "color": "#00030F",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "categories": [
    "Themes"
  ],
  "keywords": [
    "hadar theme",
    "hadar",
    "icons",
    "icon theme",
    "theme",
    "vscode",
    "angular",
    "nestjs",
    "react",
    "vue",
    "customizable"
  ],
  "activationEvents": [
    "onCommand:hadarIcons.changeFolderColor",
    "onCommand:hadarIcons.toggleExplorerArrows",
    "onCommand:hadarIcons.activate"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hadarIcons.activate",
        "title": "Hadar Icons: Activate Theme"
      },
      {
        "command": "hadarIcons.changeFolderColor",
        "title": "Hadar Icons: Change Folder Color"
      },
      {
        "command": "hadarIcons.configureIconPacks",
        "title": "Hadar Icons: Configure Icon Packs"
      },
      {
        "command": "hadarIcons.toggleExplorerArrows",
        "title": "Hadar Icons: Toggle Explorer Arrows"
      }
    ],
    "iconThemes": [
      {
        "id": "hadar-icons",
        "label": "Hadar Icons",
        "description": "Vibrant, customizable icons with framework support",
        "path": "./themes/hadar-icons.json"
      }
    ],
    "configuration": {
      "title": "Hadar Icons",
      "properties": {
        "hadar-icons.activeIconPack": {
          "type": "string",
          "default": "angular",
          "description": "Select the active icon pack for framework-specific icons.",
          "enum": [
            "default",
            "angular",
            "angular_ngrx",
            "nestjs",
            "react",
            "react_redux",
            "vue",
            "vue_vuex"
          ],
          "enumDescriptions": [
            "Standard Hadar icons without framework specifics",
            "Angular icons (components, directives, services, etc.)",
            "Angular icons with NgRx state management",
            "NestJS icons (modules, controllers, services, etc.)",
            "React icons only",
            "React icons with Redux state management",
            "Vue icons only",
            "Vue icons with Vuex state management"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run compile && node out/build-icons.js",
    "package": "vsce package",
    "compile": "npm run bundle-extension && npm run bundle-build-script",
    "bundle-extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "bundle-build-script": "esbuild ./src/build-icons.ts --bundle --outfile=out/build-icons.js --platform=node --format=cjs --minify",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.105.0",
    "esbuild": "^0.27.3",
    "typescript": "^4.0.0"
  }
}
