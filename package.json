{
  "name": "hadar-icons",
  "displayName": "Hadar Icons",
  "description": "Icon theme for VS Code",
  "version": "1.0.0",
  "publisher": "cristianvasquez",
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "categories": [
    "Icon Themes"
  ],
  "activationEvents": [
    "onCommand:hadarIcons.changeFolderColor",
    "onCommand:hadarIcons.configureIconPacks",
    "onCommand:hadarIcons.toggleExplorerArrows"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hadarIcons.changeFolderColor",
        "title": "Hadar Icons: Change Folder Color"
      },
      {
        "command": "hadarIcons.configureIconPacks",
        "title": "Hadar Icons: Configure Icon Packs"
      },
      {
        "command": "hadarIcons.toggleExplorerArrows",
        "title": "Hadar Icons: Toggle Explorer Arrows"
      }
    ],
    "iconThemes": [
      {
        "id": "hadar-icons",
        "label": "Hadar Icons",
        "path": "./themes/hadar-icons.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run compile && node out/build-icons.js",
    "package": "vsce package",
    "compile": "npm run bundle-extension && npm run bundle-build-script",
    "bundle-extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "bundle-build-script": "esbuild ./src/build-icons.ts --bundle --outfile=out/build-icons.js --platform=node --format=cjs --minify",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.105.0",
    "ts-node": "^10.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^4.0.0"
  }
}
